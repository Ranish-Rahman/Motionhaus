      font-weight: 400;
      color: #000;
      margin: 0;
    }

    .meta {
      display: none;
    }

    .product-grid a {
      text-decoration: none;
    }

    @media (max-width: 1200px) {
      .product-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 768px) {
      .product-grid {
        grid-template-columns: 1fr;
