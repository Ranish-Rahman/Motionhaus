<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>OH Architecture</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: #1a1a1a;
      color: white;
      overflow-x: hidden;
    }

    .section {
      min-height: 100vh;
      position: relative;
      opacity: 0;
      transform: translateY(50px);
      transition: all 1s ease-out;
      padding: 2rem;
    }

    .section.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .hero {
      background: url('https://pandaprank.com/cdn/shop/files/27_d0774978-cd7a-48f7-94fe-9e3bc31aae84.png?v=1743664419&width=1100') no-repeat center center/cover;
      height: 100vh;
      padding: 0;
    }

    .overlay {
      background-color: rgba(0, 0, 0, 0.4);
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      opacity: 0;
      transform: translateY(-20px);
      animation: fadeInDown 1s ease-out forwards;
    }

    .logo {
      font-weight: 800;
      font-size: 1.8rem;
    }

    .nav-links {
      display: flex;
      gap: 2rem;
      align-items: center;
    }

    .nav-links a {
      text-decoration: none;
      color: white;
      font-weight: 600;
      font-size: 0.9rem;
      transition: opacity 0.3s ease;
    }

    .nav-links a:hover {
      opacity: 0.8;
    }

    .button {
      background: black;
      padding: 0.6rem 1.2rem;
      border-radius: 2rem;
      font-weight: 600;
      color: white;
      text-decoration: none;
      transition: transform 0.3s ease;
    }

    .button:hover {
      transform: scale(1.05);
    }

    .project-info {
      display: flex;
      justify-content: space-between;
      font-weight: 600;
      font-size: 0.8rem;
      opacity: 0;
      animation: fadeIn 1s ease-out 0.5s forwards;
    }

    .tagline {
      max-width: 40%;
      font-size: 1.5rem;
      font-weight: 400;
      line-height: 1.6;
      opacity: 0;
      animation: fadeInUp 1s ease-out 1s forwards;
    }

    .scroll-indicator {
      font-size: 0.8rem;
      text-align: right;
      font-weight: 600;
      opacity: 0;
      animation: fadeInUp 1s ease-out 1.5s forwards;
      cursor: pointer;
      transition: transform 0.3s ease;
    }

    .scroll-indicator:hover {
      transform: translateY(5px);
    }

    /* New styles for additional sections */
    .about-section {
      display: grid;
      grid-template-columns: 1.2fr 0.8fr;
      gap: 4rem;
      align-items: center;
      min-height: 100vh;
      padding: 4rem;
    }

    .feature-card {
      /* background: #d44747; */
      border-radius: 20px;
      height: 700px;
      position: relative;
      overflow: hidden;
      transition: transform 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .feature-card img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      transition: transform 0.3s ease;
      padding: 1rem;
    }

    .feature-card:hover {
      transform: translateY(-10px);
    }

    .about-content {
      padding: 2rem;
      opacity: 0;
      transform: translateX(30px);
      transition: all 1s ease-out;
    }

    .section.visible .about-content {
      opacity: 1;
      transform: translateX(0);
    }

    .section-title {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 2rem;
      line-height: 1.2;
    }

    .section-text {
      font-size: 1.2rem;
      line-height: 1.8;
      margin-bottom: 3rem;
      color: #999;
    }

    .learn-more {
      display: inline-block;
      color: white;
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      position: relative;
      padding-bottom: 5px;
    }

    .learn-more::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: white;
      transform: scaleX(0);
      transform-origin: right;
      transition: transform 0.3s ease;
    }

    .learn-more:hover::after {
      transform: scaleX(1);
      transform-origin: left;
    }

    .featured-works {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      padding: 2rem;
    }

    .work-card {
      position: relative;
      height: 400px;
      overflow: hidden;
      opacity: 0;
      transform: translateY(30px);
      transition: all 1s ease-out;
    }

    .section.visible .work-card {
      opacity: 1;
      transform: translateY(0);
    }

    .work-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .work-card:hover img {
      transform: scale(1.05);
    }

    .work-info {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 1.5rem;
      background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
      color: white;
    }

    .work-info h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .work-info p {
      font-size: 0.9rem;
      opacity: 0.8;
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @media (max-width: 968px) {
      .about-section {
        grid-template-columns: 1fr;
        gap: 2rem;
        padding: 2rem;
      }

      .feature-card {
        height: 500px;
      }

      .feature-card img {
        padding: 0.5rem;
      }

      .about-content {
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <section class="section hero">
    <div class="overlay">
      <div class="top-bar">
        <div class="logo">OH Architecture</div>
        <div class="nav-links">
          <a href="#">HOME</a>
          <a href="#">SHOP</a>
          <a href="#">ABOUT</a>
          <!-- <a href="#">GALLERY</a> -->
          <a href="#" class="button">GET IN TOUCH</a>
        </div>
      </div>

      <div class="project-info">
        <span>FEATURED PROJECT</span>
        <span>HAIG</span>
        <span>2024</span>
        <span><a href="#" style="color: white; text-decoration: underline;">VIEW PROJECT</a></span>
      </div>

      <div>
        <div class="tagline">
          We design homes and spaces guided by your vision, bringing together thoughtful design, collaboration, and creativity to shape homes that simply work for how you live.
        </div>
        <div class="scroll-indicator" id="scrollIndicator">(SCROLL DOWN)</div>
      </div>
    </div>
  </section>

  <section class="section about-section" id="about">
    <div class="feature-card">
      <img src="https://pandaprank.com/cdn/shop/files/2.gif?v=1743678744&width=1500" alt="Modern Architecture">
    </div>
    <div class="about-content">
      <h2 class="section-title">Designing homes with people at heart</h2>
      <p class="section-text">
        We design spaces for people. No matter the scale of the projects, our down-to-earth approach stays the same. 
        We listen first, design second. We take the time to understand how you live, work, and move through your space. 
        Then, we bring your vision to life.
      </p>
      <a href="#" class="learn-more">Learn more about our approach →</a>
    </div>
  </section>

  <section class="section" id="works">
    <h2 class="section-title" style="text-align: center; margin-bottom: 4rem;">Featured Works</h2>
    <div class="featured-works">
      <div class="work-card">
        <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1350&q=80" alt="Myrtle Pool House">
        <div class="work-info">
          <h3>Myrtle Pool House</h3>
          <p>2024 • Under Construction</p>
        </div>
      </div>
      <div class="work-card">
        <img src="https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1350&q=80" alt="Haig">
        <div class="work-info">
          <h3>Haig</h3>
          <p>2024 • Under Construction</p>
        </div>
      </div>
      <div class="work-card">
        <img src="https://images.unsplash.com/photo-1600566753086-00f18fb6b3ea?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1350&q=80" alt="Sidney House">
        <div class="work-info">
          <h3>Sidney House</h3>
          <p>2023 • Under Construction</p>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Smooth scroll functionality
    document.getElementById('scrollIndicator').addEventListener('click', () => {
      window.scrollTo({
        top: window.innerHeight,
        behavior: 'smooth'
      });
    });

    // Intersection Observer for scroll animations
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, {
      threshold: 0.1
    });

    // Observe all sections
    document.querySelectorAll('.section').forEach(section => {
      observer.observe(section);
    });

    // Smooth scroll behavior for all anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth'
          });
        }
      });
    });
  </script>
</body>
</html>