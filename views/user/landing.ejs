      justify-content: center;
      height: 80vh;
    }
    .ari-lennox-right img {
      max-width: 100%;
      max-height: 100%;
      border-radius: 0;
      object-fit: cover;
      box-shadow: none;
    }
    @media (max-width: 1100px) {
      .ari-lennox-title { font-size: 7vw; }
      .ari-lennox-year { font-size: 3vw; }
      .ari-lennox-about-text { font-size: 3vw; }
      .ari-lennox-credits-grid, .ari-lennox-credit-block, .ari-lennox-ge, .ari-lennox-ge strong { font-size: 2vw; }
    }
    @media (max-width: 800px) {
      .ari-lennox-container { flex-direction: column; align-items: flex-start; }
      .ari-lennox-right { width: 100%; height: auto; margin-top: 2vw; }
      .ari-lennox-left { max-width: 100vw; }
    }

    .featured-3d-gallery {
      background: #faf9f6 !important;
      color: #222 !important;
      min-height: 80vh;
      position: relative;
      overflow: hidden;
    }
    .gallery-items {
      position: relative;
      width: 100vw;
      height: 70vh;
      transform-style: preserve-3d;
      perspective: 1200px;
      transition: transform 0.5s cubic-bezier(.23,1,.32,1);
    }
    .gallery-item {
      position: absolute;
      border-radius: 2vw;
      overflow: hidden;
      box-shadow: 0 8px 32px rgba(0,0,0,0.10);
    }
    .gallery-item img, .gallery-item video {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .gallery-title {
      position: absolute;
      top: 16vh;
      left: 50%;
      transform: translateX(-50%);
      font-size: 7vw;
      font-weight: 700;
      letter-spacing: -2px;
      z-index: 0;
      color: #222;
      opacity: 0.12;
      pointer-events: none;
      width: 100vw;
      text-align: center;
      display: flex;
      justify-content: center;
      gap: 2vw;
    }
    .gallery-title-left, .gallery-title-right {
      opacity: 0;
      display: inline-block;
    }
    .gallery-title-left {
      animation: titleSlideInLeft 1.2s 1s cubic-bezier(.23,1,.32,1) forwards;
    }
    .gallery-title-right {
      animation: titleSlideInRight 1.2s 1.2s cubic-bezier(.23,1,.32,1) forwards;
    }
    @keyframes titleSlideInLeft {
      0% { opacity: 0; transform: translateX(-60px);}
      100% { opacity: 0.12; transform: translateX(0);}
    }
    @keyframes titleSlideInRight {
      0% { opacity: 0; transform: translateX(60px);}
      100% { opacity: 0.12; transform: translateX(0);}
    }
    @media (max-width: 900px) {
      .gallery-item { border-radius: 4vw; }
      .gallery-title { font-size: 12vw; }
    }
    .gallery-items,
    .gallery-title {
      opacity: 0;
      transform: translateY(60px) scale(0.98);
      transition: opacity 0.8s cubic-bezier(.23,1,.32,1), transform 0.8s cubic-bezier(.23,1,.32,1);
    }
    .gallery-section-visible .gallery-items,
    .gallery-section-visible .gallery-title {
      opacity: 1;
