  <!-- GSAP and ScrollTrigger CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

  <script>
    // Smooth scroll functionality
    document.getElementById('scrollIndicator').addEventListener('click', () => {
      window.scrollTo({
        top: window.innerHeight,
        behavior: 'smooth'
      });
    });

    // Intersection Observer for scroll animations
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, {
      threshold: 0.1
    });

    // Observe all sections
    document.querySelectorAll('.section').forEach(section => {
      observer.observe(section);
    });

    // Smooth scroll behavior for all anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth'
          });
        }
      });
    });

    // Get references to the gallery section and cards
    const section = document.querySelector('.gallery-section');
    const gallery = document.getElementById('galleryItems');
    const cards = gallery ? gallery.querySelectorAll('.gallery-item') : [];

    // Pin the gallery section and animate cards in 3D during scroll
    if (section && cards.length > 0) {
      ScrollTrigger.create({
        trigger: section,
        start: 'top top',
        end: () => `+=${window.innerHeight * 2}`,
        pin: true,
        scrub: true,
        anticipatePin: 1,
      });

      // Animate each card in 3D as you scroll through the pinned section
      cards.forEach((card, index) => {
        gsap.to(card, {
          scrollTrigger: {
            trigger: section,
            start: 'top top',
            end: () => `+=${window.innerHeight * 2}`,
            scrub: true,
          },
          y: index % 2 === 0 ? -200 : 200,
          opacity: 1,
          ease: 'none'
        });
      });
    }

    // Animate all .section elements on scroll (down and up)
    gsap.utils.toArray('.section').forEach(section => {
      gsap.fromTo(section,
        { opacity: 0, y: 100 },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          scrollTrigger: {
            trigger: section,
            start: 'top 80%',
            end: 'bottom 20%',
            toggleActions: 'play reverse play reverse', // Both down and up
            markers: false
          }
        }
      );
    });
  </script>
