      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .ari-lennox-container {
      display: flex;
      width: 100vw;
      max-width: 100vw;
      align-items: center;
      justify-content: space-between;
      padding: 0 6vw;
      box-sizing: border-box;
    }
