<style>
  .sidebar {
    width: 250px;
    background: linear-gradient(195deg, rgb(66, 66, 74), rgb(25, 25, 25));
    color: white;
    padding: 20px 0;
    position: fixed;
    left: 0;
    top: 0;
    height: 100vh;
    z-index: 1000;
  }

  .sidebar-header {
    padding: 0 20px;
    margin-bottom: 30px;
  }

  .sidebar-header h2 {
    color: white;
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
  }

  .sidebar-nav {
    padding: 0 20px;
  }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-list li {
    margin-bottom: 10px;
  }

  .nav-list a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 10px 15px;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .nav-list a:hover,
  .nav-list a.active {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .nav-list a i {
    margin-right: 10px;
    width: 20px;
    text-align: center;
  }

  .sidebar-section {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: 600;
    margin: 20px 0 10px;
    padding: 0 20px;
  }

  .sidebar-footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 20px;
  }

  .help-card {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 15px;
    text-align: center;
  }

  .help-card p {
    margin: 0 0 10px;
    color: rgba(255, 255, 255, 0.8);
  }

  .help-card span {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
  }

  .btn-docs {
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-docs:hover {
    background: rgba(255, 255, 255, 0.2);
  }
</style>

<aside class="sidebar">
  <div class="sidebar-header">
    <h2>Admin Panel</h2>
  </div>
  <nav class="sidebar-nav">
    <ul class="nav-list">
      <li><a href="/admin/dashboard" class="<%= path === '/admin/dashboard' ? 'active' : '' %>"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
      <li><a href="/admin/customers" class="<%= path === '/admin/customers' ? 'active' : '' %>"><i class="bi bi-people"></i> Customers</a></li>
      <li><a href="/admin/categories" class="<%= path === '/admin/categories' ? 'active' : '' %>"><i class="bi bi-tags"></i> Categories</a></li>
      <li><a href="/admin/products" class="<%= path === '/admin/products' ? 'active' : '' %>"><i class="bi bi-box-seam"></i> Products</a></li>
      <li><a href="/admin/orders" class="<%= path === '/admin/orders' ? 'active' : '' %>"><i class="bi bi-cart-check"></i> Orders</a></li>
    </ul>
  </nav>

  <div class="sidebar-footer">
    <div class="help-card">
      <p>Need help?<br/><span>Check our docs</span></p>
      <a href="#" class="btn-docs">DOCUMENTATION</a>
    </div>
  </div>
</aside>
